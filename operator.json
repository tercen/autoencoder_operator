{
  "name": "Autoencoder",
  "description": "Trains an autoencoder-based model.",
  "tags": [
    "clustering",
    "dimensionality reduction",
    "machine learning"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/autoencoder_operator"
  ],
  "properties": [
    {
      "kind": "StringProperty",
      "name": "hidden_layers",
      "defaultValue": "32, 2, 32",
      "description": "comma-separated list describing the hidden layers architecture (e.g. `12, 2, 12` corresponds to 3 layers containing respectively 12, 2 and 12 nodes)",
      "values": {}
    },
    {
      "kind": "StringProperty",
      "name": "activ_functions",
      "defaultValue": "relu, linear, relu",
      "description": "comma-separated list of activation functions, as many as there are hidden layers (e.g. relu, linear, relu). Possible values include tanh, sigmoid, relu, linear, ramp and step",
      "values": {}
    },
    {
      "kind": "EnumeratedProperty",
      "name": "optim_type",
      "defaultValue": "adam",
      "description": "Optimizer type",
      "values": [
        "sgd",
        "rmsprop",
        "adam"
      ]
    },
    {
      "kind": "EnumeratedProperty",
      "name": "loss_type",
      "defaultValue": "squared",
      "description": "Loss type",
      "values": [
        "squared",
        "absolute",
        "huber",
        "pseudo-huber"
      ]
    },
    {
      "kind": "DoubleProperty",
      "name": "n_epochs",
      "defaultValue": "30",
      "description": "Number of epochs",
      "values": {}
    },
    {
      "kind": "DoubleProperty",
      "name": "batch_size",
      "defaultValue": "32",
      "description": "batch size",
      "values": {}
    },
    {
      "kind": "DoubleProperty",
      "name": "seed",
      "defaultValue": "-1",
      "description": "Seed for random number generation. if less than 0, set a Random seed",
      "values": {}
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Variable",
            "type": "",
            "description": "Variable identifiers (feature names, marker names, etc.)",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "1..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Observation",
            "type": "",
            "description": "Observation identifiers (sample IDs, event IDs, etc.)",
            "ontologyMapping": "observation",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Measurement",
                "type": "numeric",
                "description": "Numeric input values for autoencoder training",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              }
            ]
          }
        ]
      }
    ]
  }
}